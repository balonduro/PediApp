<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="lamca.software.com.pediapp.Historial">

    <TextView android:text="Historial" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHistorial"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/lvHistorial"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar a Tiendas"
        android:id="@+id/btnRegresar"
        android:paddingTop="10dp"
        android:layout_below="@+id/lvHistorial"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venta"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/lvHistorial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/tvHistorial"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="14dp" />

</RelativeLayout>
